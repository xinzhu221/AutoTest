[
  {
    "description":"测试post请求，不带参数",
    "request":{
      "uri":"/postdemo",
      "method":"post"
    },
    "response":{
      "text":"不带参数的post请求的响应"
    }
  },
  {
    "description":"测试post请求，带参数",
    "request":{
      "uri":"/postwithparam",
      "method":"post",
      "forms":{
        "name":"ke",
        "age":"18"
      }
    },
    "response":{
      "text":"ke回来啦"
    }
  },
  {
    "description":"测试post请求，带cookie",
    "request":{
      "uri":"/post/with/cookie",
      "method":"post",
      "cookies":{
        "login":"true"
      },
      "json":{
        "name":"ke",
        "age":"18"
      }
    },
    "response":{
      "status":"200",
      "json":{
        "ke":"success",
        "status":1
      }
    }
  },
  {
    "description": "测试post请求，带headers",
    "request":{
      "uri":"/post/with/headers",
      "method":"post",
      "headers":{
        "Content-Type":"application/json"
      },
      "json":{
        "name":"ke",
        "age":"18"
      }
    },
    "response":{
      "json":{
        "ke":"success",
        "status":1
      }
    }
  }
]