[
  {
    "description":"模拟一个没有参数的get请求",
    "request":{
      "uri":"/getdemo",
      "method":"get"
    },
    "response":{
      "text":"这是一个没有参数的get请求"
    }
  },
  {
    "description":"有参数的get请求",
    "request":{
      "uri":"/getwithparam",
      "method":"get",
      "queries":{
        "name":"kk",
        "age":"18"
      }
    },
    "response":{
      "text":"kk回来啦"
    }
  },
  {
    "description":"带cookie的get请求",
    "request":{
      "uri":"/get/with/cookies",
      "method":"get",
      "cookies":{
        "login":"true"
      }
    },
    "response":{
      "headers":{
        "Content-Type":"text/html;charset=gbk"
      },
      "text":"带cookies的get请求的响应结果"
    }
  },
  {
    "description":"返回cookies信息的请求",
    "request":{
      "uri":"/getCookies",
      "method":"get"
    },
    "response":{
      "headers":{
        "Content-Type":"text/html;charset=gbk"
      },
      "cookies":{
        "login":"true"
      },
      "text":"恭喜你获得cookies信息成功"
    }
  },
  {
    "description":"测试post请求，带cookie",
    "request":{
      "uri":"/post/with/cookie",
      "method":"post",
      "cookies":{
        "login":"true"
      },
      "json":{
        "name":"ke",
        "age":"18"
      }
    },
    "response":{
      "status":"200",
      "json":{
        "ke":"success",
        "status":"1"
      }
    }
  }
]